<?xml version="1.0" encoding="utf-8"?>
<TabHost xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@android:id/tabhost"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TabWidget
            android:id="@android:id/tabs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <FrameLayout
            android:id="@android:id/tabcontent"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ScrollView android:id="@+id/incoming_tab"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView android:id="@+id/incoming_calls"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </ScrollView>

            <ScrollView android:id="@+id/outgoing_tab"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView android:id="@+id/outgoing_calls"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </ScrollView>

            <ScrollView android:id="@+id/missed_tab"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView android:id="@+id/missed_calls"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </ScrollView>

            <ScrollView android:id="@+id/all_tab"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView android:id="@+id/all_calls"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </ScrollView>

        </FrameLayout>
    </LinearLayout>
</TabHost>
